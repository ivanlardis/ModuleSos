<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/green_light"
    android:elevation="2dp"
    app:cardCornerRadius="2dp">


    <ImageView
        android:id="@+id/incidents_activity_complete_item_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="8dp"
        android:src="@drawable/ic_sentiment_dissatisfied_black_48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

       android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/incidents_activity_complete_item_text_view_intident"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:text="Проблема решена!"
            android:textColor="@color/green_dark_p"
            android:textSize="24sp" />


        <TextView
            android:id="@+id/incidents_activity_complete_item_text_view_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_marginLeft="64dp"
            android:textColor="@color/grey"
            android:textSize="16sp"
            tools:text="RU-EN" />

        <TextView
            android:id="@+id/incidents_activity_complete_item_text_view_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:lines="1"
            android:text="RU-EN"
            android:textColor="@color/grey_light"
            android:textSize="14dp" />
    </LinearLayout>


</android.support.v7.widget.CardView>
