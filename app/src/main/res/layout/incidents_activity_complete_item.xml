<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    app:cardCornerRadius="2dp"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:layout_margin="8dp"
        android:id="@+id/incidents_activity_complete_item_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_sentiment_dissatisfied_black_48dp" />

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">




        <TextView
            android:id="@+id/incidents_activity_complete_item_text_view_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"

            android:layout_marginRight="2dp"
            android:textColor="@color/grey"
            android:textSize="16sp"
            tools:text="RU-EN" />

        <TextView
            android:id="@+id/incidents_activity_complete_item_text_view_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:lines="1"
            android:textSize="14dp"
            android:text="RU-EN"
            android:textColor="@color/grey_light" />
    </LinearLayout>


</android.support.v7.widget.CardView>
